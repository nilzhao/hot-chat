{
  "easycom": {
    "autoscan": true,
    "custom": {
      "^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
    }
  },
  "pages": [
    {
      "path": "pages/chat-list/index",
      "style": {
        "navigationBarTitleText": "热聊"
      }
    },
    {
      "path": "pages/contact/index",
      "style": {
        "navigationBarTitleText": "通讯录"
      }
    },
    {
      "path": "pages/red-envelope/index",
      "style": {
        "navigationBarTitleText": "红包"
      }
    },
    {
      "path": "pages/red-envelope/send-out",
      "style": {
        "navigationBarTitleText": "发红包"
      }
    },
    {
      "path": "pages/red-envelope/goods-item-list"
    },
    {
      "path": "pages/user/profile/index",
      "style": {
        "navigationBarTitleText": "GROW-我的"
      }
    },
    {
      "path": "pages/user/login",
      "style": {
        "navigationBarTitleText": "登录",
        "titleNView": false
      }
    },
    {
      "path": "pages/chat/index",
      "style": {
        "navigationBarTitleText": "聊天窗口",
        "titleNView": false
      }
    }
  ],
  "tabBar": {
    "color": "#333",
    "selectedColor": "#007aff",
    "backgroundColor": "#fff",
    "iconWidth": "24px",
    "list": [
      {
        "text": "热聊",
        "pagePath": "pages/chat-list/index",
        "iconPath": "static/image/home.png",
        "selectedIconPath": "static/image/home-active.png"
      },
      {
        "text": "通讯录",
        "pagePath": "pages/contact/index",
        "iconPath": "static/image/money.png",
        "selectedIconPath": "static/image/money-active.png"
      },
      {
        "text": "我的",
        "pagePath": "pages/user/profile/index",
        "iconPath": "static/image/user.png",
        "selectedIconPath": "static/image/user-active.png"
      }
    ]
  },
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "GROW",
    "navigationBarBackgroundColor": "#F8F8F8",
    "backgroundColor": "#F8F8F8"
  }
}
