{
  "easycom": {
    "autoscan": true,
    "custom": {
      "^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
    }
  },
  "pages": [
    {
      "path": "pages/index/index",
      "style": {
        "navigationBarTitleText": "GROW-首页"
      }
    },
    {
      "path": "pages/red-envelope/index",
      "style": {
        "navigationBarTitleText": "红包"
      }
    },
    {
      "path": "pages/user/profile/index",
      "style": {
        "navigationBarTitleText": "GROW-我的"
      }
    },
    {
      "path": "pages/user/login",
      "style": {
        "navigationBarTitleText": "登录"
      }
    },
    {
      "path": "pages/user/register",
      "style": {
        "navigationBarTitleText": "注册"
      }
    }
  ],
  "tabBar": {
    "color": "#333",
    "selectedColor": "#007aff",
    "backgroundColor": "#fff",
    "list": [
      {
        "text": "首页",
        "pagePath": "pages/index/index"
      },
      {
        "text": "红包",
        "pagePath": "pages/red-envelope/index"
      },
      {
        "text": "我的",
        "pagePath": "pages/user/profile/index"
      }
    ]
  },
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "uni-app",
    "navigationBarBackgroundColor": "#F8F8F8",
    "backgroundColor": "#F8F8F8"
  }
}
